.ProfileTab_container
    display: flex
    flex-direction: row
    width: 100%
    justify-content: space-evenly
    @media only screen and (max-width: 1200px)
        flex-direction: column

.ProfileTab_followers
    color: white
    display: flex
    flex-direction: row
    align-items: center
    background-color: rgba(255, 192, 203, 0.286)
    margin-top: 10px
    border-radius: 4px
    width: 100%

.ProfileTab_following
    color: white
    display: flex
    flex-direction: row
    align-items: center
    background-color: rgba(255, 192, 203, 0.286)
    margin-top: 10px
    border-radius: 4px
    width: 100%

.ProfileTab_content
    display: flex
    flex-direction: column
    align-items: flex-start
    background-color: rgba(255, 192, 203, 0.149)
    border-radius: 5px
    padding: 20px
    margin: 10px
    overflow: scroll
    height: 300px

.ProfileTab_names
    text-decoration: none
    font-size: 25px
    color: pink
    margin: 5px

.ProfileTab_profile
    border-radius: 50%
    width: 80px
    height: 80px
    margin-top: 5px
    margin-bottom: 5px

.ProfileTab_posts
    display: flex
    flex-direction: row