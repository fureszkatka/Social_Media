@import url('https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap');

.profile_container
    background-color: rgba(3,1,6,0.91)
    padding: 50px
    color: white
    border-radius: 15px
    width: fit-content
    margin-top: 40px
    display: flex
    flex-direction: column
    justify-content: space-between

.profile_content
    display: flex
    flex-direction: row
    @media only screen and (max-width: 1200px)
        flex-direction: column
        align-items: center

.profile_title
    color: white
    display: flex
    font-size: 25px
    border-bottom: solid white 2px
    flex-direction: row
    align-items: center
    margin: 5px

.Profile_data
    margin: 20px
    padding: 20px
    width: 400px

.profile_name
    color: white
    display: flex
    flex-direction: row
    justify-content: space-between
    font-size:20px

.profile_email
    color: white
    display: flex
    flex-direction: row
    justify-content: space-between
    font-size:20px

.profile_edit-delete-button
    display: flex
    flex-direction: row
    justify-content: center
    
.profile_edit
    background-color: purple
    border-style: none
    border-radius: 5px
    font-size: 15px
    margin: 5px
    height: 30px
    width: 140px

.profile_delete
    background-color: rgb(255, 0, 64)
    border-style: none
    border-radius: 5px
    font-size: 15px
    margin: 5px
    height: 30px
    width: 140px