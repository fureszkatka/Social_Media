

.Posts_content
    display: flex
    flex-direction: column
    background: rgba(80, 6, 190, 0.413)
    width: 500px
    align-items: center
    height: 100%
    @media only screen and (min-width: 500px)
        width: 600px


.Posts_create
    margin: 10px
    width: 300px
    display: flex

.Posts_create-butt
    display: flex
    background-color:  rgb(37,5,182)
    color: rgb(255, 123, 0)
    font-weight: bold
    font-size: 20px
    border: solid 3px
    border-radius: 5px 
    border-top-color: rgb(84, 84, 254)
    border-left-color: rgb(84, 84, 254)
    border-bottom-color: rgb(0, 0, 76)
    border-right-color:  rgb(0, 0, 76)
    transition:  2s
    box-shadow: inset 0 0 0 0 rgb(37,5,182)
    text-decoration: none
    padding: 10px
    width: 300px
    justify-content: center

.Posts_create-butt:hover
    color: white
    box-shadow: inset 300px 0 0 0 #fa003b
    border-top-color: #ff85a1
    border-left-color: #ff85a1
    border-bottom-color: #79001c
    border-right-color:  #79001c

.Post_header
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    width: 100%
    background-color: rgb(23 4 81 0)
    padding: 10px
    margin-bottom: 20px
    margin-top: 20px
    border-top-right-radius: 15px
    border-top-left-radius: 15px

.Posts_bodyContent
    display: flex
    flex-direction: column
    background-color: rgb(23 4 81 0)
    width: 100%
    padding: 10px
    border-bottom-right-radius: 15px
    border-bottom-left-radius: 15px
    align-items: center

.Posts_elements
    display: flex
    flex-direction: column
    align-items: center 
    width: 450px
    background-color: rgba(128, 0, 128, 0.712)
    margin-bottom: 20px
    border-radius: 15px
    color: white
    font-size: 25px
    margin-top: 20px



.Posts_image
    width: 40px
    height: 40px

.Posts_name
    display: flex
    flex-direction: row
    align-items: center
    margin-left: 4px

.Posts_title
    display: flex
    flex-direction: row



.Posts_middle
    display: flex
    flex-direction: column
    align-items: center
    width: 500px
    height: fit-content
    justify-content: space-between
    padding: 10px
    overflow: auto
    @media only screen and (min-width: 500px)
        width: 700px


.Posts_list-profile-name
    display: flex
    flex-direction: row