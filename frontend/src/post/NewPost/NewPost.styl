.NewPost_container
    display: flex
    flex-direction: column
    padding: 50px
    background-color: rgba(3, 1, 6, 0.91)
    display: flex
    flex-direction: column
    align-items: flex-end
    border-radius: 15px
    color: rgba(160, 160, 220, 0.85)


.NewPost_profile-pic
    width: 60px
    height: 60px
    border: solid 3px
    margin-right: 10px
    justify-content: space-between
    border-radius: 50%

.NewPost_profile
    display: flex
    flex-direction: row

.NewPost_all
    display: flex
    flex-direction: column

.NewPost_hide
    display: none


.NewPost_title
    display: flex
    flex-direction: row
    width: 280px
    margin: 5px
    justify-content: space-between
    align-items: center

.NewPost_postTitle
    margin: 10px
    border-left: 2px solid rgb(0, 0, 0)
    border-bottom-color:#a0a0dcd9
    border-left-color: #a0a0dcd9
    border-top-color: transparent
    border-right-color: transparent
    border-bottom-left-radius: 10px
    height: 30px
    width: 100%
    color: #a0a0dcd9
    background-color: rgba(47, 5, 89, 0.645)
    padding-left: 10px
    padding-right: 30px
    font-size: 20px


.NewPost_body-text
    display: flex
    flex-direction: row
    margin: 5px
    width: 280px
    justify-content: space-between
    align-items: center

.NewPost_postBody-text
    margin: 10px
    border-left: 2px solid rgb(0, 0, 0)
    border-bottom-color:#a0a0dcd9
    border-left-color: #a0a0dcd9
    border-top-color: transparent
    border-right-color: transparent
    border-bottom-left-radius: 10px
    height: 30px
    width: 100%
    color: #a0a0dcd9
    background-color: rgba(47, 5, 89, 0.645)
    padding-left: 10px
    padding-right: 30px
    font-size: 20px

.NewPost_body-img
    display: flex
    flex-direction: row
    margin: 5px
    width: 280px
    justify-content: space-between
    align-items: center


.NewPost_postBody-img
    background-color: purple
    border-style: none
    height: 30px
    display: flex
    flex-direction: row 

.file-upload-button
    color: red

.NewPost_comment
    display: flex
    flex-direction: row
    margin: 5px
    width: 280px
    justify-content: space-between
    align-items: center

.NewPost_postComment
    background-color: purple
    border-style: none
    height: 30px


.NewPost_button
    display: flex
    background-color: rgb(75, 92, 222)
    justify-content: center
    align-items: center
    width: 100px
    height: 40px
    margin-top: 10px
    font-size: 20px
    font-weight: bolder
    border-radius: 5px