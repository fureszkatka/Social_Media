.Single_content
    display: flex
    flex-direction: column
    align-items: center 
    background: rgba(80, 6, 190, 0.669)
    width: 500px
    color: white
    font-size: 25px
    height: 100%


.Single_title
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    width: 100%
    background-color: rgb(23 4 81 0)
    padding: 10px
    margin-bottom: 20px
    margin-top: 20px
    border-top-right-radius: 15px
    border-top-left-radius: 15px

.Single_body
    display: flex
    flex-direction: column
    background-color: rgb(23 4 81 0)
    width: 100%
    padding: 10px
    border-bottom-right-radius: 15px
    border-bottom-left-radius: 15px

.Single_name
    display: flex
    flex-direction: row
    align-items: center
    margin-left: 4px


.Single_photo
    display: flex
    flex-direction: column
    align-items: center

.Single_update
    background-color: rgb(25, 0, 215)
    border-style: none
    height: 40px
    width: 130px
    color: white 
    margin: 20px

.Single_delete
    background-color: rgb(169, 68, 0)
    border-style: none
    height: 40px
    width: 130px
    color: white 
    margin: 20px
    font-size:25px
    font-family: 'Syne Mono', monospace

.Single_buttons
    display: flex
    flex-direction: row
    width: 100%
    justify-content: space-evenly