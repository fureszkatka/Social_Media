
.Rout_Links
    display: flex
    flex-direction: column
    height: 100%
    width: 100%
    align-items: center
    flex-grow: 1
    padding-top: 130px
    padding-bottom: 100px
  
.Menu_Content
    position: fixed
    top: 0px
    display: flex
    font-size: 35px
    background-color: rgba(3, 1, 6, 0.91)
    color: #a0a0dcd9
    z-index: 2
    height: fit-content
    width: 100%
    align-items: center
    @media only screen and (max-width: 600px)
        justify-content: center
        

.Menu_Links
    list-style: none
    display: flex
    flex-direction: row
    align-items: center
    @media only screen and (max-width: 600px)
        flex-direction: column
        width: fit-content
        padding: 0px
        justify-content: 0px

.Menu_Link
    color: inherit
    text-decoration: none
    margin-left: 30px
    @media only screen and (max-width: 600px)
        flex-direction: column
        margin: 0px
        
.Menu_Link:hover
    text-shadow: 2px 2px 8px #a0a0dcd9


.Menu_depend_Links
    display: flex
    flex-direction: row
    align-items: center
    @media only screen and (max-width: 600px)
        flex-direction: column


.Menu_link-profile
    text-decoration: none
    background-color: rgba(37, 5, 182, 0.524)
    color: white
    border-radius: 15px
    display: flex
    flex-direction: row
    padding: 5px
    padding-left: 10px
    padding-right: 10px
    width: fit-content

.Menu_signout-profile
    display: flex
    flex-direction: rox
    align-items: center
    @media only screen and (max-width: 600px)
        flex-direction: column


.Menu_signout_button
    color: purple
    margin-left: 30px

.Menu_users_profile
    color: purple
    margin-left: 30px
    @media only screen and (max-width: 600px)
        flex-direction: column
        margin: 0px

.Menu_users_profile:hover
    text-shadow: 2px 2px 8px #a0a0dcd9